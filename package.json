{
  "name": "@scrycollective/react-splitter-layout",
  "version": "1.1.0",
  "description": "A simple split layout for React and modern browsers",
  "keywords": [
    "react",
    "layout",
    "split",
    "splitter"
  ],
  "author": "Yang Liu <hi@zesik.com>",
  "contributors": [
    "Jason Stafford <jason.stafford@scrycollective.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScryCollective/react-splitter-layout"
  },
  "bugs": {
    "url": "https://github.com/ScryCollective/react-splitter-layout/issues"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.0.0",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "expect": "^1.20.2",
    "gh-pages": "^1.0.0",
    "ignore-styles": "^5.0.1",
    "jsdomify": "^3.1.0",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.3",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^3.0.5",
    "react-test-renderer": "^15.5.4",
    "style-loader": "^0.18.2",
    "webpack": "^3.0.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.8",
    "react": "^15.5.4"
  },
  "scripts": {
    "prepare": "cross-env NODE_ENV=production webpack --progress -p",
    "build": "cross-env NODE_ENV=development webpack --progress",
    "build-example": "cd example && cross-env NODE_ENV=development webpack --progress",
    "lint": "eslint --ext .js,.jsx src/ example/javascripts/",
    "test": "cross-env NODE_ENV=test mocha --require babel-register --require ignore-styles src/*/*.test.js",
    "coverage": "nyc yarn test"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": [
        "off"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 1
        }
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-plusplus": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/prefer-stateless-function": [
        "warn"
      ],
      "react/no-did-mount-set-state": [
        "off"
      ]
    }
  }
}
