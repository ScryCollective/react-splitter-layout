{
  "name": "@scrycollective/react-splitter-layout",
  "version": "1.0.0",
  "description": "A simple split layout for React and modern browsers",
  "keywords": [
    "react",
    "layout",
    "split",
    "splitter"
  ],
  "author": "Yang Liu <hi@zesik.com>",
  "contributors": [
    "Jason Stafford <jason.stafford@scrycollective.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScryCollective/react-splitter-layout"
  },
  "bugs": {
    "url": "https://github.com/ScryCollective/react-splitter-layout/issues"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "anser": "^1.3.0",
    "autoprefixer": "^7.0.1",
    "babel-code-frame": "^6.22.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^2.2.0",
    "babel-register": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.1",
    "detect-port": "^1.1.1",
    "dotenv": "^4.0.0",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "expect": "^1.20.2",
    "flow-bin": "^0.45.0",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "^2.28.0",
    "http-proxy-middleware": "^0.17.4",
    "ignore-styles": "^5.0.1",
    "jsdomify": "^3.1.0",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^10.3.2",
    "object-assign": "^4.1.1",
    "promise": "^7.1.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dev-utils": "^0.5.2",
    "react-dom": "^15.5.4",
    "react-router": "^3.0.5",
    "react-test-renderer": "^15.5.4",
    "stack-frame-mapper": "^0.4.0",
    "stack-frame-parser": "^0.4.0",
    "stack-frame-unmapper": "^0.4.0",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "whatwg-fetch": "^2.0.3"
  },
  "peerDependencies": {
    "prop-types": "^15.5.8",
    "react": "^15.5.4"
  },
  "scripts": {
    "prepublish": "cross-env NODE_ENV=production webpack --progress -p",
    "build": "cross-env NODE_ENV=development webpack --progress",
    "build-example": "cd example && cross-env NODE_ENV=development webpack --progress",
    "lint": "eslint --ext .js,.jsx src/ example/javascripts/",
    "test": "cross-env NODE_ENV=test mocha --require babel-register --require ignore-styles test/*.spec.js*",
    "coverage": "nyc --extension .jsx yarn test",
    "start": "node scripts/start.js"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": [
        "off"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 1
        }
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-plusplus": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/prefer-stateless-function": [
        "warn"
      ],
      "react/no-did-mount-set-state": [
        "off"
      ]
    }
  }
}
